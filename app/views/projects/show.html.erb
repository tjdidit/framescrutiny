<div class="container mt-4">
  <!-- Project Header -->
  <div class="row mb-4">
    <div class="col text-center">
      <h1 class="display-4"><%= @project.name %></h1>
      <p class="lead text-muted"><%= @project.description %></p>
    </div>
  </div>

  <!-- Dailies Section -->
  <div class="row">
    <div class="col">
      <div class="card shadow-sm">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
          <h2 class="mb-0">Dailies</h2>
          <%= link_to 'New Daily', new_project_daily_path(@project), class: "btn btn-light btn-sm" %>
        </div>
        <div class="card-body">
          <% if @dailies.any? %>
            <ul class="list-group">
              <% @dailies.each do |daily| %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  <%= link_to "Daily ##{daily.id}", project_daily_path(@project, daily), class: "text-decoration-none" %>
                  <small class="text-muted">Created: <%= daily.created_at.strftime("%B %d, %Y") %></small>
                </li>
              <% end %>
            </ul>
          <% else %>
            <p class="text-muted">No dailies found for this project. <%= link_to "Upload the first daily", new_project_daily_path(@project), class: "text-decoration-none" %>.</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
